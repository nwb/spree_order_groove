<fieldset data-hook="credit_card">
  <legend><%= Spree.t(:credit_card) %>&nbsp;&nbsp;&nbsp;<a href="<%= new_cc_admin_subscription_path(@subscription) %>">New Credit Card</a></legend>
  <% if @subscription.source %>
  <table class="table table-condensed table-bordered">
    <tr>
      <th width="20%"><%= Spree.t(:name_on_card) %>:</th>
      <td><%= @subscription.source.name %></td>
    </tr>
    <tr>
      <th><%= Spree.t(:card_type) %>:</th>
      <td><%= @subscription.source.cc_type %></td>
    </tr>
    <tr>
      <th><%= Spree.t(:card_number) %>:</th>
      <td><%= @subscription.source.display_number %></td>
    </tr>
    <tr>
      <th><%= Spree.t(:expiration) %>:</th>
      <td><%= @subscription.source.month %>/<%= @subscription.source.year %></td>
    </tr>
  </table>
    <%else%>
    <label>No Credit on file.</label>
    <%end%>
</fieldset>
