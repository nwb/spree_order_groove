<% subscription = nil # @order.subscriptions.where(variant: line_item.variant) %>
<td class='cart-item-subscription text-center' data-hook='cart_item_subscription'>
  <% if subscription %>
      <%= item_form.collection_select :subscription_frequency_id, Spree::SubscriptionFrequency.all, :id, :title, { selected: subscription.subscription_frequency_id }, { class: "form-control" } %>
  <% else %>
    Not Subscribed
  <% end %>
</td>
<td class="text-center">
  <% if subscription %>
    <%#= item_form.number_field :delivery_number, class: "form-control", min: 1, value: subscription.delivery_number %>
  <% else %>
    None
  <% end %>
</td>
